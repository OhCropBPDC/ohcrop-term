/* Core Council Tilted Cards Custom Styles */
.relative-container {
  perspective: 1000px;
  margin-top: 2rem;
  margin-bottom: 2rem;
  display: flex;
  justify-content: center;
  gap: 2rem;
}

.card-tilted {
  background-color: #f9eddf;
  border: 2px solid black;
  width: 140px;
  height: 180px;
  border-radius: 4px;
  box-shadow: 3px 4px 0 #222;
  transform-style: preserve-3d;
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-start;
  position: relative;
  padding: 0 0.75rem 0.75rem 0.75rem;
}

.card-tilted:hover {
  transform: translateZ(40px) rotate(0);
}

.label {
  font-size: 11.5px;
  text-transform: uppercase;
  font-weight: 600;
  position: absolute;
  left: 7px;
  top: -18px;
  letter-spacing: 0.04em;
  color: black;
  white-space: nowrap;
}

.name {
  font-weight: 700;
  font-size: 1rem;
  text-align: left;
}

.role {
  font-size: 0.99rem;
  font-weight: 700;
  text-align: left;
  color: #000;
}

.card-1 { transform: rotate(-16deg); margin-top: 18px;}
.card-2 { transform: rotate(-5deg); margin-top: 8px;}
.card-3 { transform: rotate(4deg); margin-top: 14px;}
.card-4 { transform: rotate(-2deg); margin-top: 0;}
.card-5 { transform: rotate(12deg); margin-top: 14px;}

.marquee-container {
  width: 100vw;
  overflow: hidden;
  position: relative;
  background: #000;
  height: 2.5rem;
  /* Ensures the scroll is only on one line */
}

.marquee {
  display: inline-block;
  white-space: nowrap;
  will-change: transform;
  animation: marquee-left-right 16s linear infinite;
}

@keyframes marquee-left-right {
  0%   { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

@media (max-width: 640px) {
  /* Council cards: stack vertically, center, add padding */
  .relative-container {
    flex-direction: column !important;
    flex-wrap: nowrap !important;
    align-items: center !important;
    justify-content: flex-start !important;
    gap: 1.2rem !important;
    padding: 0.5rem 0.5rem 1.5rem 0.5rem !important;
    margin: 0 !important;
    overflow-x: visible !important;
    overflow-y: visible !important;
  }
  .card-tilted {
    width: 90vw !important;
    min-width: 0 !important;
    max-width: 340px !important;
    height: auto !important;
    margin: 0 auto 1rem auto !important;
    padding: 1rem !important;
    box-shadow: 2px 3px 0 #222 !important;
    border-radius: 1rem !important;
    font-size: 1rem !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
  }
  .card-1, .card-2, .card-3, .card-4, .card-5 {
    transform: none !important;
    margin-top: 0 !important;
  }
  .card-tilted .label {
    font-size: 12px !important;
    left: 10px !important;
    top: -14px !important;
    max-width: 90vw !important;
    white-space: normal !important;
    overflow-wrap: break-word !important;
  }
  .card-tilted .role {
    font-size: 1rem !important;
    line-height: 1.2 !important;
  }
  .card-tilted img {
    width: 80vw !important;
    max-width: 220px !important;
    height: auto !important;
    margin-bottom: 0.7rem !important;
    margin-top: 0.7rem !important;
    border-radius: 0.75rem !important;
  }
}

